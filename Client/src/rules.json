{
    "FilterRules": {
        "csharp": {
            "cmpinfo": "CS.*",
            "stderr": "\\w+Exception"
        },
        "python": {
            "cmpinfo": "\\s\\w*Error:.*",
            "stderr": "\\s\\w*Error:.*"
        }
    },
    "ParsingRules": {
        "csharp": {
            "both": [
                [
                    "1",
                    "match 1"
                ]
            ],
            "expressions": [ 
                [
                    "2",
                    "match 2"
                ]
            ],
            "functions":[
                [
                    "2",
                    "match 2"
                ]
            ]
        },
        "python": {
            "both": [],
            "expressions": [],
            "functions":[]
        }
    },
    "ValidationRules": {
        "csharp": {
            "both": [
                [
                    "Console\\.",
                    "Use of  {match} is not permitted in MetalUp.Express"
                ],
                [
                    "System\\.",
                    "Explicit use of the 'System' namespace is unnecessary, and not permitted"
                ],
                [
                    "\\s*var\\s",
                    "Use of  {match} is not permitted"
                ],
                [
                    "\\w*[^=]=[^=]",
                    "Assignment statement (single '=') is not permitted. (If you intended to test for equality, use '==')"
                ],
                [
                    "\\susing\\s\\w*",
                    "'using' statements for all permissible functions are automatically provided (behind the scenes). No additional 'using' statements are permitted."
                ],
                [
                    "\\spublic\\s|\\sprivate\\s|\\sprotected\\s|\\sclass\\s|\\sabstract\\s",
                    "Use of {match}  is not permitted"
                ],
                [
                    "\\WArrayList\\W",
                    ""
                ],
                [
                    "\\Wnew\\s*Random\\W",
                    "Use of the system Random generator"
                ],
                [
                    "\\WDateTime\\.",
                    "Calling Today or Now on DateTime"
                ]
            ],
            "expressions": [],
            "functions": []
        },
        "python": {
            "both": [
                [
                    "\\s*print*\\s*\\(",
                    "Use of  {match} is not permitted"
                ],
                [
                    "\\s*input*\\s*\\(",
                    "Use of  {match} is not permitted"
                ],
                [
                    "\\w*[^=]=[^=]",
                    "Assignment statement (single '=') is not permitted"
                ],
                [
                    "\\.append",
                    "'append' to a List is not permitted as it is a mutating method. Hint: you may use '+' to append a list to a list."
                ]
            ],
            "expressions": [],
            "functions": []
        }
    }
}